              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "username",
                  "value": "sarah.chen@example.com",
                  "description": "Email address"
                },
                {
                  "key": "password",
                  "value": "TestPassword123!"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "description": "Login with email and password. Rate limited to 5 per minute per IP."
          }
        },
