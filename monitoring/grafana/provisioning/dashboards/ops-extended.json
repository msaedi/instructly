{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "enable": true,
        "hide": false,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "line", "lineWidth": 2 },
          "unit": "ms"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "id": 1,
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "editorMode": "code",
          "expr": "topk(10, histogram_quantile(0.95, sum by (le, endpoint) (rate(instainstru_http_request_duration_seconds_bucket[5m]))))",
          "legendFormat": "{{endpoint}}",
          "range": true,
          "refId": "A"
        }
      ],
      "title": "Top 10 Endpoints by P95 Latency",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": { "defaults": { "unit": "ms" }, "overrides": [] },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "id": 2,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "editorMode": "code",
          "expr": "histogram_quantile(0.99, sum by (le, service) (rate(instainstru_service_operation_duration_seconds_bucket[5m])))",
          "legendFormat": "{{service}}",
          "range": true,
          "refId": "A"
        }
      ],
      "title": "Service P99 Latency",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 8 },
      "id": 3,
      "options": { "legend": { "showLegend": true }, "tooltip": { "mode": "single" } },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "editorMode": "code",
          "expr": "(sum by (service) (rate(instainstru_service_operations_total{status=\"success\"}[5m])) / sum by (service) (rate(instainstru_service_operations_total[5m]))) * 100",
          "legendFormat": "{{service}}",
          "range": true,
          "refId": "A"
        }
      ],
      "title": "Service Success Rate (%)",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": { "defaults": { "unit": "short" }, "overrides": [] },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 8 },
      "id": 4,
      "options": { "legend": { "showLegend": true }, "tooltip": { "mode": "single" } },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "editorMode": "code",
          "expr": "topk(10, sum by (service, operation, error_type) (increase(instainstru_errors_total[1h])))",
          "legendFormat": "{{service}}/{{operation}} ({{error_type}})",
          "range": true,
          "refId": "A"
        }
      ],
      "title": "Top Error Types (Last 1h)",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 15 },
      "id": 5,
      "options": {
        "showHeader": true
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "editorMode": "code",
          "expr": "topk(20, sum by (endpoint) (rate(instainstru_http_request_duration_seconds_sum[5m]) / rate(instainstru_http_request_duration_seconds_count[5m])))",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "title": "Current Slow Endpoints (Avg Latency)",
      "transformations": [
        { "id": "organize", "options": { "excludeByName": { "Time": true } } }
      ],
      "type": "table"
    }
  ],
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["instainstru", "ops"],
  "templating": {
    "list": [
      {
        "current": { "selected": false, "text": "Prometheus", "value": "Prometheus" },
        "hide": 0,
        "label": "Datasource",
        "name": "datasource",
        "options": [],
        "query": "prometheus",
        "refresh": 1,
        "type": "datasource"
      }
    ]
  },
  "time": { "from": "now-6h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "iNSTAiNSTRU Ops Extended",
  "version": 1
}
