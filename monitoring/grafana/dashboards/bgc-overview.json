{
  "title": "BGC Overview",
  "uid": "bgc-overview",
  "timezone": "",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "style": "dark",
  "editable": true,
  "graphTooltip": 1,
  "description": "Background Check monitoring. Requires Prometheus metrics: bgc_invites_total, checkr_webhook_total, background_job_failures_total, bgc_pending_over_7d, bgc_jobs_failed_total or failures proxy.",
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Invites by Outcome (5m rate)",
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "stacking": {
              "mode": "percentage",
              "group": "A"
            },
            "lineWidth": 2
          }
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right"
        },
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (outcome) (rate(bgc_invites_total[5m]))",
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ]
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Webhook Errors (5m rate)",
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 2
          }
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "hidden",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(checkr_webhook_total{outcome=\"error\"}[5m]))",
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Job Failures by Type (1h increase)",
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 9
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "stacking": {
              "mode": "normal",
              "group": "B"
            }
          }
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi"
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (type) (increase(background_job_failures_total[1h]))",
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ]
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Pending > 7 Days",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 12,
        "y": 9
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "orange",
                "value": 5
              },
              {
                "color": "red",
                "value": 20
              }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        },
        "orientation": "auto"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "bgc_pending_over_7d",
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ]
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "DLQ Failures (24h)",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 18,
        "y": 9
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 2
          }
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "hidden"
        },
        "tooltip": {
          "mode": "single"
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase(background_job_failures_total[24h]))",
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ]
    },
    {
      "id": 6,
      "type": "stat",
      "title": "BGC Pass Rate",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 24
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 75
              }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": ""
        },
        "orientation": "auto"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase(bgc_reports_total{result='passed'}[$__rate_interval])) / sum(increase(bgc_reports_total[$__rate_interval]))",
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "format": "time_series"
        }
      ],
      "description": "\nQueries: sum(increase(bgc_reports_total{result=\"passed\"}[$__rate_interval])) / sum(increase(bgc_reports_total[$__rate_interval]))"
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "BGC Time to Complete",
      "gridPos": {
        "h": 8,
        "w": 16,
        "x": 8,
        "y": 24
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 0
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi"
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.5, sum(rate(bgc_completion_latency_bucket[$__rate_interval])) by (le))",
          "legendFormat": "p50",
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        },
        {
          "refId": "B",
          "expr": "histogram_quantile(0.9, sum(rate(bgc_completion_latency_bucket[$__rate_interval])) by (le))",
          "legendFormat": "p90",
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "description": "\nQueries: histogram_quantile(0.5, sum(rate(bgc_completion_latency_bucket[$__rate_interval])) by (le)); histogram_quantile(0.9, sum(rate(bgc_completion_latency_bucket[$__rate_interval])) by (le))"
    }
  ],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-12h",
    "to": "now"
  },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  }
}
